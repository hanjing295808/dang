<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_name_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="成语:" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="成语名称" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_spell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_spell_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="拼音:" />

        <TextView
            android:id="@+id/tv_spell"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="成语拼音" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="解释:" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="成语解释" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_derivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_derivation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来源:" />

        <TextView
            android:id="@+id/tv_derivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="成语来源" />
    </LinearLayout>

    <LinearLayout android:id="@+id/ll_sample" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_sample_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="例子:" />

        <TextView
            android:id="@+id/tv_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="成语例子" />
    </LinearLayout>

</LinearLayout>