        android:layout_below="@+id/ll_content"
        >
        <TextView
        android:id="@+id/tv_name_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="来源:" />
        <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="来源" />
    </LinearLayout>
  
